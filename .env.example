# Homeserver Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Domain Configuration
DOMAIN=yourdomain.com
EMAIL=your-email@example.com

# Traefik Configuration
TRAEFIK_PUBLIC_NETWORK=web
# Generate with: htpasswd -nb username password | sed 's/$//' | sed 's/\$/\$\$/g'
TRAEFIK_BASIC_AUTH=username:$2y$10$your_bcrypt_hash_here

# Cloudflare Configuration (for DNS challenge)
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
