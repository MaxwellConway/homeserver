# Homeserver Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Domain Configuration
DOMAIN=yourdomain.com
EMAIL=your-email@example.com

# Traefik Configuration
TRAEFIK_PUBLIC_NETWORK=web
TRAEFIK_BASIC_AUTH=admin:$2y$10$example_bcrypt_hash_here

# Cloudflare Configuration (for DNS challenge)
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# Optional: Database Configuration
# MYSQL_ROOT_PASSWORD=secure_password_here
# POSTGRES_PASSWORD=secure_password_here

# Optional: Additional Service Configuration
# JELLYFIN_PUBLISHED_SERVER_URL=https://media.yourdomain.com
# NODE_ENV=production
